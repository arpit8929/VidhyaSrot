<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Course</h1>
        <div class="col-6 offset-3">
            <form action="/courses/<%=course._id%>?_method=PUT" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="course[title]" value="<%=course.title%>"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3 course-details">
                    <label class="form-label" for="courseUrl">Course URL</label>
                    <input class="form-control" type="text" id="courseUrl" name="course[courseUrl]" required>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="image">Image URL</label>
                    <input class="form-control" type="text" id="image" name="course[image]" value="<%=course.image%>"
                        required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">description </label>
                    <textarea class="form-control" type="text" id="description" name="course[description]"
                        required><%=course.description%></textarea>
                </div>
                <label for="tags">Choose course Tags:</label>
                <p>(CTRL + Click to select Multiple)</p>
                <select name="course[tags]" id="tags" multiple>
                    <option value="web-dev">web-dev</option>
                    <option value="ML">ML</option>
                    <option value="mobile">Mobile</option>
                    <option value="language">Programming-Language</option>
                    <option value="javascript">Javascript</option>
                    <option value="react">React</option>
                    <option value="data-structures">Data Structures</option>
                    <option value="frameworks">Frameworks</option>
                    <option value="UI-design">UI-design</option>
                </select>
                <div class="mb-3">
                    <button class="btn btn-success">Update Course</button>
                </div>
            </form>
            <a href="/courses/<%=course._id%>"><button class="btn red-btn">Go back</button></a>
        </div>
    </div>
    <script>
        const typeSelect = document.getElementById('type');
        const paidCourseDetails = document.querySelector('.paid-course-details');
        const freeCourseDetails = document.querySelector('.free-course-details');

        typeSelect.addEventListener('change', () => {
            if (typeSelect.value === 'paid') {
                paidCourseDetails.style.display = 'block';
                freeCourseDetails.style.display = 'none';
            } else if (typeSelect.value === 'free') {
                paidCourseDetails.style.display = 'none';
                freeCourseDetails.style.display = 'block';
            }
        });
    </script>